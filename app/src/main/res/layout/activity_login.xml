<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aa000000"
                android:visibility="visible"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:scaleType="center"
                android:src="@drawable/login_bg"/>
            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rlLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/activity_margin_small"
                    android:background="@drawable/login_logo_bg">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/activity_margin_small"
                        android:src="@drawable/hometrust_logo"
                        android:visibility="visible"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/activity_margin_small"
                    android:text="LOGIN"
                    android:textColor="@color/text_color_white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/llSocialButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlHeader"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">
                <RelativeLayout
                    android:id="@+id/rlFbButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_fb_bg">
                    <ImageView
                        android:id="@+id/ivFbIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/activity_margin_extra_small"
                        android:src="@drawable/ic_fb_icon"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ivFbIcon"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@id/ivFbIcon"
                        android:layout_toRightOf="@id/ivFbIcon"
                        android:background="@color/divider_color"
                    />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/ivFbIcon"
                        android:layout_toRightOf="@+id/ivFbIcon"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_extra_small"
                        android:text="Connect with Facebook"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_extra_small"
                        android:textStyle="bold"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlLinkedInButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_margin_small"
                    android:layout_weight="1"
                    android:background="@drawable/button_linkedin_bg">
                    <ImageView
                        android:id="@+id/ivLinkedInIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/activity_margin_extra_small"
                        android:src="@drawable/ic_linkedin_icon"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@id/ivLinkedInIcon"
                        android:layout_toRightOf="@id/ivLinkedInIcon"
                        android:background="@color/divider_color"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/ivLinkedInIcon"
                        android:layout_toRightOf="@+id/ivLinkedInIcon"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_extra_small"
                        android:text="Connect with LinkedIn"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_extra_small"
                        android:textStyle="bold"
                    />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llSocialButtons"
                android:visibility="visible">

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_margin_small"
                    android:layout_marginStart="@dimen/activity_margin_small"
                    android:layout_toLeftOf="@+id/tv2"
                    android:layout_toStartOf="@+id/tv2"
                    android:background="@color/colorPrimaryDark"/>


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/activity_margin_small"
                    android:text="OR"
                    android:textColor="@color/text_color_white"/>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_margin_small"
                    android:layout_marginRight="@dimen/activity_margin_small"
                    android:layout_toEndOf="@+id/tv2"
                    android:layout_toRightOf="@+id/tv2"
                    android:background="@color/colorPrimaryDark"/>
            </RelativeLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2"
                android:layout_marginEnd="@dimen/activity_margin_small"
                android:layout_marginLeft="@dimen/activity_margin_small"
                android:layout_marginRight="@dimen/activity_margin_small"
                android:layout_marginStart="@dimen/activity_margin_small"
                app:tabIndicatorColor="@color/colorPrimaryDark"
                app:tabSelectedTextColor="@color/colorPrimaryDark"
                app:tabTextColor="@color/text_color_white"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tabs"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
