<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_small">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:visibility="visible">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Widget.MyApp.ActionBar"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:animateLayoutChanges="true"
                android:background="@android:color/transparent"
                android:contentInsetEnd="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:visibility="visible"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">
                <RelativeLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/rlBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_back"
                            android:visibility="visible"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/ivBack"
                            android:layout_toRightOf="@+id/ivBack"
                            android:gravity="center_vertical"
                            android:text="@string/activity_my_profile_back_button"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/text_size_small"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/activity_my_profile_title"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="SAVE"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBar">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvSubmit"
                android:layout_marginBottom="@dimen/top_bottom_margin">
                <LinearLayout
                    android:id="@+id/llInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:background="@drawable/edit_text_background"
                        android:drawableLeft="@drawable/ic_user_name"
                        android:drawablePadding="@dimen/activity_margin_small"
                        android:drawableStart="@drawable/ic_user_name"
                        android:hint="Full Name"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:padding="@dimen/edittext_padding"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/text_size_medium"/>
                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:background="@drawable/edit_text_background"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="@dimen/activity_margin_small"
                        android:drawableStart="@drawable/ic_email"
                        android:enabled="false"
                        android:hint="@string/activity_edit_profile_hint_email"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:padding="@dimen/edittext_padding"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/text_size_medium"/>
                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:background="@drawable/edit_text_background"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="@dimen/activity_margin_small"
                        android:drawableStart="@drawable/ic_phone"
                        android:hint="@string/activity_edit_profile_hint_mobile"
                        android:inputType="number"
                        android:lines="1"
                        android:padding="@dimen/edittext_padding"
                        android:textColorHint="@color/hint_text_color"
                        android:textSize="@dimen/text_size_medium"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:background="@drawable/edit_text_background"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_margin_small"
                            android:text="@string/activity_edit_profile_ques1"
                            android:textSize="@dimen/text_size_medium"/>
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/llState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tvColorado"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:padding="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/tvSeattle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:padding="@dimen/activity_margin"
                                    android:text="WA"
                                    android:visibility="gone"
                                />
                                <TextView
                                    android:id="@+id/tvButton1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="visible"/>
                                <TextView
                                    android:id="@+id/tvButton2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="visible"/>
                                <TextView
                                    android:id="@+id/tvButton3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/tvButton4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/tvButton5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/tvButton6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/tvButton7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/tvButton8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/tvButton9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>
                                <TextView
                                    android:id="@+id/tvButton10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_margin_small"
                                    android:layout_weight="1"
                                    android:background="@drawable/state_button_unselected"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/activity_margin"
                                    android:paddingLeft="@dimen/activity_margin"
                                    android:paddingRight="@dimen/activity_margin"
                                    android:paddingTop="@dimen/activity_margin"
                                    android:text="CO"
                                    android:visibility="gone"/>

                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:background="@drawable/edit_text_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/edittext_padding"
                            android:text="@string/activity_edit_profile_ques3"
                            android:textSize="@dimen/text_size_medium"
                        />


                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_margin_small"
                            android:layout_marginLeft="@dimen/activity_margin_extra_small"
                            android:layout_marginRight="@dimen/activity_margin_extra_small"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:background="@drawable/edit_text_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/edittext_padding"
                            android:text="@string/activity_edit_profile_ques2"
                            android:textSize="@dimen/text_size_medium"/>


                        <CheckBox
                            android:id="@+id/cb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/colorPrimary"
                            android:padding="@dimen/edittext_padding"
                            android:text="$0 - $150,000 "/>

                        <CheckBox
                            android:id="@+id/cb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/colorPrimary"
                            android:padding="@dimen/edittext_padding"
                            android:text="$150,000 - $250,000 "/>


                        <CheckBox
                            android:id="@+id/cb3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/colorPrimary"
                            android:padding="@dimen/edittext_padding"
                            android:text="$250,000 - $500,000"/>

                        <CheckBox
                            android:id="@+id/cb4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/colorPrimary"
                            android:padding="@dimen/edittext_padding"
                            android:text="$500,000 +"/>


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>
        </RelativeLayout>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
