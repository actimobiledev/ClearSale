<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:visibility="visible">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Widget.MyApp.ActionBar"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:animateLayoutChanges="true"
                android:background="@android:color/transparent"
                android:contentInsetEnd="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:visibility="visible"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">
                <RelativeLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/rlBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_back"
                            android:visibility="visible"/>
                        <TextView
                            android:id="@+id/tvBack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/ivBack"
                            android:layout_toRightOf="@+id/ivBack"
                            android:gravity="center_vertical"
                            android:text="@string/activity_filter_back_button"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/text_size_small"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/activity_filter_title"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvApply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="APPLY"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appBar">
            <LinearLayout
                android:id="@+id/range_views_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_margin"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_small"
                    android:text="Status"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_extra_small"
                    android:background="@drawable/edit_text_background"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_small"
                    android:text="Location (mi)"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <me.bendik.simplerangeview.SimpleRangeView
                    android:id="@+id/rangeview_location"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:count="5"
                    app:end="4"
                    app:endFixed="4"
                    app:showFixedLine="true"
                    app:start="0"
                    app:startFixed="0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_small"
                    android:text="Range"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <me.bendik.simplerangeview.SimpleRangeView
                    android:id="@+id/fixed_rangeview"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:count="6"
                    app:end="5"
                    app:endFixed="5"
                    app:showFixedLine="true"
                    app:start="0"
                    app:startFixed="0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_small"
                    android:text="Bed"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/llBedroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <TextView
                        android:id="@+id/tvBedAny"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/state_button_unselected"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="ANY"/>
                    <TextView
                        android:id="@+id/tvBed2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/state_button_unselected"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="2-3"
                    />


                    <TextView
                        android:id="@+id/tvBed3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/state_button_unselected"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="3-4"/>
                    <TextView
                        android:id="@+id/tvBed4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/state_button_unselected"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="4+"
                    />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_small"
                    android:text="Bath"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/llState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <TextView
                        android:id="@+id/tvBathAny"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/state_button_unselected"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="ANY"/>
                    <TextView
                        android:id="@+id/tvBath2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/state_button_unselected"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="2-3"/>


                    <TextView
                        android:id="@+id/tvBath3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/state_button_unselected"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="3-4"/>
                    <TextView
                        android:id="@+id/tvBath4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/state_button_unselected"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin"
                        android:text="4+"
                    />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_margin_small"
                    android:text="Cities"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/llCities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>